{
  "name": "reminder-app-backend",
  "version": "1.0.0",
  "description": "Backend server for the Reminder App with MongoDB, Firebase, and AI features",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js --detectOpenHandles",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
    "lint": "eslint src/**/*.js",
    "format": "prettier --write \"src/**/*.js\"",
    "sync": "node src/scripts/sync.js",
    "docs": "swagger-autogen -o src/swagger.json src/index.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.6.5",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-actuator": "^1.8.4",
    "express-async-handler": "^1.2.0",
    "express-rate-limit": "^7.1.5",
    "express-status-monitor": "^1.3.4",
    "express-validator": "^7.0.1",
    "firebase-admin": "^11.11.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.30.1",
    "moment-timezone": "^0.5.44",
    "mongoose": "^8.1.1",
    "node-cron": "^3.0.3",
    "node-nlp": "^4.27.0",
    "openai": "^4.24.1",
    "rate-limit-redis": "^4.2.0",
    "redis": "^4.6.12",
    "swagger-autogen": "^2.23.7",
    "swagger-ui-express": "^5.0.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@babel/core": "^7.23.7",
    "@babel/preset-env": "^7.23.7",
    "babel-jest": "^29.7.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^9.5.0",
    "nodemon": "^3.0.3",
    "prettier": "^3.2.1",
    "supertest": "^6.3.4"
  },
  "jest": {
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "transform": {},
    "setupFiles": [
      "<rootDir>/src/tests/setup.js"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/tests/**/*.js",
      "!src/swagger.js"
    ]
  }
}
